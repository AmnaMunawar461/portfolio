---
interface Project {
    name: string;
    description: string;
    technologies: string[];
    category: 'AI/ML' | 'Data Platform' | 'Data Engineering';
    impact?: string;
    link: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
};

const projects: Project[] = [{
    name: 'AI Agent Pipeline with CrewAI',
    description: 'Built an end-to-end multi-agent system for automated LinkedIn & Medium content generation using CrewAI framework. Implemented multi-agent collaboration, tool calling, evaluation, and workflow orchestration to automate content creation workflows.',
    technologies: ['CrewAI', 'Python', 'LLMs', 'Multi-Agent Systems', 'Workflow Orchestration'],
    category: 'AI/ML',
    impact: 'Automated content generation pipeline enabling scalable content creation',
    link: {
        buttonLabel: 'View Details'
    }
}, {
    name: 'RAG-based Medical Q/A Chatbot',
    description: 'Developed a Medical Q/A Chatbot using RAG architecture with LangChain, FAISS vector store, and OpenAI embeddings. Optimized chunking strategies and prompt engineering to improve retrieval accuracy and contextual responses from long PDF documents.',
    technologies: ['LangChain', 'RAG', 'FAISS', 'OpenAI', 'Vector Databases', 'Prompt Engineering'],
    category: 'AI/ML',
    impact: 'Enabled contextual Q/A from medical documents with improved retrieval accuracy',
    link: {
        buttonLabel: 'View Details'
    }
}, {
    name: 'Scalable Data Pipeline Architecture',
    description: 'Architected and deployed scalable data pipelines using Apache Iceberg, Hive, and dbt on AWS S3. Orchestrated workflows via Airflow to support critical analytics and ML workloads. Migrated legacy Spark workloads to dbt, significantly reducing pipeline runtime and compute costs.',
    technologies: ['Apache Iceberg', 'dbt', 'Apache Airflow', 'AWS S3', 'Hive', 'Trino'],
    category: 'Data Platform',
    impact: 'Reduced pipeline runtime and compute costs while supporting 50M+ records',
    link: {
        buttonLabel: 'View Details'
    }
}, {
    name: 'Change Data Capture (CDC) Implementation',
    description: 'Implemented robust CDC layers using Debezium and Airbyte for MySQL and MongoDB change streams. Created production-ready connectors and Helm charts. Enabled real-time data synchronization for up-to-date ML model features and analytics.',
    technologies: ['Debezium', 'Airbyte', 'MySQL', 'MongoDB', 'Kubernetes', 'Helm'],
    category: 'Data Engineering',
    impact: 'Enabled real-time data synchronization for ML models and analytics',
    link: {
        buttonLabel: 'View Details'
    }
}, {
    name: 'Cost Optimization & Performance Tuning',
    description: 'Reduced storage and read I/O costs by 30% through MongoDB archiving pipelines. Optimized Trino clusters with KEDA autoscaling to maintain high query performance under heavy concurrency. Enhanced PostgreSQL with TimescaleDB features for real-time chatbot analytics.',
    technologies: ['MongoDB', 'Trino', 'KEDA', 'PostgreSQL', 'TimescaleDB', 'Kubernetes'],
    category: 'Data Platform',
    impact: '30% cost reduction in storage/I/O, improved query performance under high concurrency',
    link: {
        buttonLabel: 'View Details'
    }
}, {
    name: 'Infrastructure as Code & Automation',
    description: 'Automated infrastructure provisioning using Terraform and ArgoCD for consistent deployments. Created custom Helm charts for CNPG (Cloud Native PostgreSQL) and deployed on Kubernetes. Configured VPC PrivateLink and DMS for production data migrations.',
    technologies: ['Terraform', 'ArgoCD', 'Helm', 'Kubernetes', 'CNPG', 'AWS DMS'],
    category: 'Data Platform',
    impact: 'Streamlined deployments and enabled zero-downtime migrations',
    link: {
        buttonLabel: 'View Details'
    }
}, {
    name: 'RFM-based Customer Segmentation',
    description: 'Designed and executed RFM-based customer segmentation models to support marketing insights and user segmentation. Partnered with analytics teams to develop user profiling and behavioral pipelines driving actionable business insights.',
    technologies: ['Python', 'Machine Learning', 'RFM Analysis', 'Customer Segmentation', 'Data Analytics'],
    category: 'AI/ML',
    impact: 'Enabled data-driven marketing strategies and improved user targeting',
    link: {
        buttonLabel: 'View Details'
    }
}];
---

<div>

    <div class="mb-6">
        <h2 class="text-2xl font-bold text-white mb-2">Featured Projects</h2>
        <p class="text-gray-400 text-sm">Data Platform, Engineering & AI/ML Solutions</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

        {projects.map(project =>

            <div class="flex flex-col justify-between items-start border border-gray-700 rounded-lg p-5 bg-black hover:border-primary transition-colors">

                <div class="w-full">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-xs px-2 py-1 rounded bg-primary/20 text-primary border border-primary/30">
                            {project.category}
                        </span>
                    </div>

                    <h3 class="text-xl font-semibold text-white mb-3">
                        {project.name}
                    </h3>

                    <p class="text-gray-400 text-sm mb-4 leading-relaxed">
                        {project.description}
                    </p>

                    {project.impact ? (
                        <div class="mb-4 p-2 bg-gray-900/50 rounded border-l-2 border-primary">
                            <p class="text-xs text-primary font-semibold mb-1">Impact</p>
                            <p class="text-xs text-gray-300">{project.impact}</p>
                        </div>
                    ) : null}

                    <div class="flex flex-wrap gap-2 mb-4">
                        {project.technologies.slice(0, 4).map(tech => (
                            <span class="text-xs px-2 py-1 rounded bg-gray-800 text-gray-300 border border-gray-700">
                                {tech}
                            </span>
                        ))}
                        {project.technologies.length > 4 ? (
                            <span class="text-xs px-2 py-1 rounded bg-gray-800 text-gray-400 border border-gray-700">
                                +{project.technologies.length - 4} more
                            </span>
                        ) : null}
                    </div>
                </div>

                {
                    project.link?.url ?
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || '_blank'}
                            class="
                                w-full px-4 py-2.5 mt-auto text-center
                                border border-gray-600 rounded-lg
                                hover:text-primary
                                hover:border-primary
                                transition-colors
                            ">
                            {project.link.buttonLabel || 'View Project'}
                        </a>
                    : project.link?.buttonLabel ?
                        <div class="w-full px-4 py-2.5 mt-auto text-center border border-gray-600 rounded-lg text-gray-500 cursor-not-allowed">
                            {project.link.buttonLabel}
                        </div>
                    : null
                }

            </div>

        )}

    </div>

</div>
